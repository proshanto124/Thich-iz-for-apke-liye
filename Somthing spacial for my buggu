  <script>
    // Countdown Timer
    const startDate = new Date("2024-12-25T00:00:00");
    
    function updateCountdown() {
      const now = new Date();
      const diff = now - startDate;
      
      const seconds = Math.floor(diff / 1000);
      const minutes = Math.floor(seconds / 60);
      const hours = Math.floor(minutes / 60);
      const days = Math.floor(hours / 24);
      const weeks = Math.floor(days / 7);
      
      document.getElementById("weeks").innerText = weeks;
      document.getElementById("days").innerText = days;
      document.getElementById("hours").innerText = hours;
      document.getElementById("minutes").innerText = minutes;
      document.getElementById("seconds").innerText = seconds;
    }
    
    setInterval(updateCountdown, 1000);
    updateCountdown();

    // Love Quotes
    const loveQuotes = [
      "Vaishu (BUGGU), tum meri zindagi ki sabse pyaari baat ho! ğŸ’•",
      "Har din tumhe dekh ke lagta hai ki main sapne mein hun! âœ¨",
      "Tum jo bhi pehenti ho, usme bilkul princess lagti ho! ğŸ‘‘",
      "Tumhare bina ek din bhi incomplete lagta hai mujhe! ğŸ’–",
      "Tum mere saath ho toh har mushkil aasan lag jaati hai! ğŸŒŸ",
      "Tumhari hansi sunke mera poora din ban jata hai! ğŸ˜Š",
      "Main tumse itna pyaar karta hun ki words mein express nahi kar sakta! ğŸ’",
      "Tum meri life ki greatest achievement ho! ğŸ†",
      "Tumhare saath har moment special feel hota hai! â­",
      "Vaishu (BUGGU), tum mere dil ki rani ho aur hamesha rahogi! ğŸ‘¸"
    ];

    let currentQuote = 0;

    function getNewQuote() {
      currentQuote = (currentQuote + 1) % loveQuotes.length;
      document.getElementById("daily-quote").innerText = `"${loveQuotes[currentQuote]}"`;
    }

    function showSurprise() {
      document.getElementById("surprise").classList.remove("hidden");
    }

    function showPhotos() {
      document.getElementById("photos").classList.remove("hidden");
    }
  </script>
